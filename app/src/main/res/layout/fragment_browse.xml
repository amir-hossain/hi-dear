<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:orientation="vertical"
    android:background="@color/almost_white">

    <TextView
        android:id="@+id/see_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/see_details"
        app:layout_constraintBottom_toTopOf="@+id/half_cycle"
        app:layout_constraintEnd_toEndOf="@+id/swipeStack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swipeStack" />

    <link.fls.swipestack.SwipeStack
        android:id="@+id/swipeStack"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/see_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </link.fls.swipestack.SwipeStack>

    <View
        android:id="@+id/half_cycle"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/half_circle_shap"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:ellipsize="end"
        android:ems="10"
        android:maxLines="1"
        android:text="Benjamin"
        android:textColor="@color/blue_black"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/cross_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/half_cycle" />

    <ImageView
        android:id="@+id/cross_btn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/ic_cros"
        app:layout_constraintBottom_toBottomOf="@+id/half_cycle"
        app:layout_constraintEnd_toStartOf="@id/heart_btn"
        app:layout_constraintStart_toStartOf="@+id/name" />

    <ImageView
        android:id="@+id/heart_btn"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:src="@drawable/ic_heart"
        app:layout_constraintEnd_toEndOf="@+id/name"
        app:layout_constraintStart_toEndOf="@id/cross_btn"
        app:layout_constraintTop_toTopOf="@+id/cross_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>